@font-face {
  font-family: 'Bebas';
  src: url('http://www.lessthan3.com/font/bebas.eot');
  src: local('â˜º'), url('http://www.lessthan3.com/font/bebas.woff') format('woff'), url('http://www.lessthan3.com/font/bebas.ttf') format('truetype'), url('http://www.lessthan3.com/font/bebas.svg') format('svg');
  font-weight: normal;
  font-style: normal;
